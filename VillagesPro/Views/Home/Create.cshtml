

@model VillagesPro.Models.VillagesList

@{
    ViewBag.Title = "Create";
}

<div class=" mt-5 text-center" style="direction:rtl">
    <h2>הוסף ישוב</h2>

    @using (Html.BeginForm("Create", "Home", FormMethod.Post))
    {
        <div class="form-group  row d-inline-flex m-3" >
            <div class="col  h-50 m-auto">

                @Html.EditorFor(model => model.VillageName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.VillageName, "", new { @class = "text-danger" })
            </div>
            <div class="col-1">
                <button type="submit" class="btn btn-primary">הוסף</button>
            </div>
           
        </div>

        
    }

    <div>
        @Html.ActionLink("חזרה לרשימה", "Index")
    </div>

</div>
